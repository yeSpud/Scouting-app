<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.bluetooth.BluetoothAdapter" />
        <import type="android.view.View" />
        <variable name="activity" type="org.dragons.scoutingapp.activities.MainActivityViewModel" />
        <variable name="bluethread" type="org.dragons.scoutingapp.bluefiles.BlueThread" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        tools:context=".activities.MainActivity">

        <ImageView
            android:id="@+id/Logo"
            android:layout_width="250dp"
            android:layout_height="105dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:contentDescription="@string/logo"
            android:visibility="visible"
            app:srcCompat="@mipmap/logo" />

        <Button
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Logo"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/green_button"
            android:fontFamily="@font/arial"
            android:paddingStart="5dp"
            android:paddingTop="10dp"
            android:paddingEnd="5dp"
            android:paddingBottom="10dp"
            android:text="@string/startScout"
            android:textSize="20sp"
            android:visibility="@{(BluetoothAdapter.getDefaultAdapter().isEnabled &amp;&amp; bluethread.INSTANCE.running) ? View.VISIBLE : View.GONE}" />

        <Button
            android:id="@+id/connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/start"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/gray_button"
            android:fontFamily="@font/arial"
            android:paddingStart="5dp"
            android:paddingTop="10dp"
            android:paddingEnd="5dp"
            android:paddingBottom="10dp"
            android:text="@string/connect"
            android:textSize="20sp"
            android:visibility="@{(BluetoothAdapter.getDefaultAdapter().isEnabled &amp;&amp; !bluethread.INSTANCE.running) ? View.VISIBLE : View.GONE}" />

        <Button
            android:id="@+id/disconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/connect"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/red_button"
            android:fontFamily="@font/arial"
            android:paddingStart="5dp"
            android:paddingTop="10dp"
            android:paddingEnd="5dp"
            android:paddingBottom="10dp"
            android:text="@string/disconnect"
            android:textSize="20sp"
            android:visibility="@{(BluetoothAdapter.getDefaultAdapter().isEnabled &amp;&amp; bluethread.INSTANCE.running) ? View.VISIBLE : View.GONE}" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/disconnect"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/darkGray">

            <LinearLayout
                android:id="@+id/consoleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>
</layout>